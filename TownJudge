// Time complexity o(v+E) space complexity o(n)
class Solution {
    public int findJudge(int n, int[][] trust) {
        if(n==1) return 1;
        if(trust==null) return -1;
        int[] degree = new int[n+1];
        for(int i=0;i<trust.length;i++){
            degree[trust[i][0]]--;
            degree[trust[i][1]]++;
        }
        for(int i=0 ;i<degree.length;i++){
            if(degree[i]==n-1){
                return i;
            }
        }
        return -1;
    }
}
